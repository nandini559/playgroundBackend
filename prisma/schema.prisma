generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  education String?
  links     Json? // { github: "...", linkedin: "...", portfolio: "..." }
  projects  Project[]
  hobbies   Hobby[]
}

model Project {
  id          String  @id @default(uuid())
  title       String
  description String?
  skills      Json // e.g. ["NestJS", "Prisma", "MySQL"]
  link        String?
  UserId      String?
  User        User?   @relation(fields: [UserId], references: [id], onDelete: Cascade)
}

model Hobby {
  id    String @id @default(uuid())
  name  String
  UserId String?
  User    User? @relation(fields: [UserId], references: [id])
}

