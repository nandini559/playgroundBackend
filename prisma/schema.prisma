generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}





model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String?
  education String?
  links     Json?
  projects  Project[]
  hobbies   Hobby[]
}








model Project {
  id          String  @id @default(uuid())
  title       String
  description String?
  skills      Json // e.g. ["NestJS", "Prisma", "MySQL"]
  link        String?
  UserId      String?
  User        User?   @relation(fields: [UserId], references: [id], onDelete: Cascade)
}






model Hobby {
  id    String @id @default(uuid())
  name  String
  UserId String?
  User    User? @relation(fields: [UserId], references: [id])
}





model ExpanseTracker {
  id        String    @id @default(uuid())
  title     String
  amount    Decimal   @db.Decimal(10, 2)
  category  Category
  date      DateTime
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([date])
}

enum Category {
  Food
  Travel
  Utilities
  Other
}